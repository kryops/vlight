{
  "name": "@kryops/vlight",
  "version": "0.0.1",
  "main": "backend/dist/index.js",
  "repository": "https://github.com/kryops/vlight",
  "author": "Michael Strobel <michael@kryops.de>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=11.0.0"
  },
  "scripts": {
    "all": "yarn lint && yarn test && yarn build",
    "clean": "rimraf backend/dist frontend/dist node_modules/.cache .linaria-cache",
    "build": "yarn run clean && concurrently 'yarn build:backend' 'yarn build:frontend'",
    "build:backend": "tsc -p ./backend/src",
    "build:frontend": "cross-env NODE_ENV=production webpack --config frontend/webpack.config.ts --env.production --progress",
    "build:frontend:dev": "webpack --config frontend/webpack.config.ts --progress",
    "build:frontend:profile": "webpack --config frontend/webpack.config.ts --progress --env.profile",
    "client:tcp": "sucrase-node backend/clients/vlight-tcp.ts",
    "client:udp": "sucrase-node backend/clients/vlight-udp.ts",
    "docker:build": "docker build -t kryops/vlight .",
    "docker:run": "docker run --rm --privileged -p 8000:8000 -v $(pwd)/config:/usr/src/app/config -it --init kryops/vlight",
    "docker": "run-s docker:build docker:run",
    "frontend:analyze": "webpack --config frontend/webpack.config.ts --env.production --env.analyze",
    "lint": "run-p lint:eslint lint:ts lint:css",
    "lint:eslint": "eslint 'frontend/**/*.@(ts|tsx)' 'backend/**/*.ts'",
    "lint:ts": "tsc -p ./frontend && tsc -p ./backend",
    "lint:css": "stylelint --syntax scss 'frontend/**/*.@(ts|tsx)'",
    "postinstall": "rimraf node_modules/.cache .linaria-cache",
    "prepare": "yarn build",
    "prod": "run-s build start:prod",
    "start": "concurrently 'nodemon' 'tsc -p ./backend/src --watch --noEmit --preserveWatchOutput' 'webpack-dev-server --config frontend/webpack.config.ts'",
    "start:backend": "nodemon",
    "start:frontend": "webpack-dev-server --config frontend/webpack.config.ts",
    "start:devserver": "cross-env DEV_SERVER=true nodemon",
    "start:prod": "cross-env NODE_ENV=production && node .",
    "test": "jest"
  },
